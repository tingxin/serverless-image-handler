{
  "name": "new-image-handler",
  "scripts": {
    "watch-server": "nodemon --ignore test/ --watch src -e ts,tsx --exec ts-node -P tsconfig.json src/index.ts",
    "serve": "node src/lib/index.js",
    "compile": "tsc --project tsconfig.json",
    "test:compile": "tsc --noEmit --project tsconfig.jest.json",
    "test": "rm -fr lib/ && yarn test:compile && jest --passWithNoTests --all --coverageProvider=v8 && yarn eslint",
    "build": "yarn test && yarn compile",
    "build:docker": "docker build -t new-image-handler .",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "upgrade-dependencies": "export CI=0 && npm-check-updates --upgrade --target=minor --reject='projen' && yarn install --check-files && yarn upgrade",
    "watch": "tsc --project tsconfig.json -w",
    "eslint": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test build-tools .projenrc.js"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa-logger": "^3.1.2",
    "@types/node": "^14.17.33",
    "@types/sharp": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.3.1",
    "jest-junit": "^12",
    "json-schema": "^0.4.0",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^11",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "aws-sdk": "^2.1027.0",
    "http-errors": "^1.8.0",
    "koa": "^2.13.4",
    "koa-logger": "^3.2.1",
    "sharp": "^0.29.2"
  },
  "bundledDependencies": [],
  "engines": {
    "node": ">= 12.0.0"
  },
  "license": "Apache-2.0",
  "version": "0.0.0",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cdk.out/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/",
      "/cdk.out/"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/cdk.out/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
